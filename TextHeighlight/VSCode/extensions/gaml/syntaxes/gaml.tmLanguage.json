{
	"name": "gaml",
	"scopeName": "source.gaml",
	"patterns": [
		{
			"include": "#GlobalSpace"
		},
		{
			"include": "#Comments"
		},
		{
			"include": "#Strings"
		}
	],
	"repository": {
		"Comments": {
			"patterns": [
				{
					"include": "#BlockComment"
				},
				{
					"include": "#LineComment"
				},
				{
					"include": "#DescriptionComment"
				}
			]
		},
		"GlobalSpace": {
			"patterns": [
				{
					"include": "#GlobalSpaceModifiers"
				},
				{
					"include": "#AccessModifiers"
				},
				{
					"include": "#Operators"
				},
				{
					"include": "#ClassKeywords"
				},
				{
					"include": "#FunctionKeywords"
				},
				{
					"include": "#ModuleKeywords"
				},
				{
					"include": "#TemplateKeywords"
				},
				{
					"include": "#StandardTypes"
				},
				{
					"include": "#StandardConstants"
				},
				{
					"include": "#BuildinOperators"
				},
				{
					"include": "#Asserts"
				}
			]
		},
		"DescriptionModifiers": {
			"patterns": [
				{
					"name": "storage.modifier.gaml",
					"match": "@"
				},
				{
					"name": "keyword.other.gaml",
					"match": "\\b(param|return|extern_c|cdecl|stdcall|fastcall|thiscall|const|static|inline|virtual|override|abstract|final|deprecated|unimplemented|align)\\b"
				}
			]
		},
		"GlobalSpaceModifiers": {
			"patterns": [
				{
					"name": "storage.modifier.gaml",
					"match": "\\b(const|mut)\\b"
				}
			]
		},
		"AccessModifiers": {
			"patterns": [
				{
					"name": "storage.modifier.gaml",
					"match": "\\b(public|protected|private)\\b"
				}
			]
		},
		"Operators": {
			"patterns": [
				{
					"name": "keyword.control.gaml",
					"match": "\\b(static|do|while|for|foreach|break|continue|if|else|switch|switch_all|case|default|return)\\b"
				}
			]
		},
		"ClassKeywords": {
			"patterns": [
				{
					"name": "storage.type.gaml",
					"match": "\\b(struct|enum|interface|object|component)\\b"
				},
				{
					"name": "keyword.other.gaml",
					"match": "\\b(this|super)\\b"
				}
			]
		},
		"FunctionKeywords": {
			"patterns": [
				{
					"name": "keyword.other.gaml",
					"match": "\\b(func|lambda)\\b"
				}
			]
		},
		"ModuleKeywords": {
			"patterns": [
				{
					"name": "keyword.other.gaml",
					"match": "\\b(module|import|implement)\\b"
				}
			]
		},
		"TemplateKeywords": {
			"patterns": [
				{
					"name": "keyword.other.gaml",
					"match": "\\b(typename|template)\\b"
				}
			]
		},
		"StandardTypes": {
			"patterns": [
				{
					"name": "support.type.gaml",
					"match": "\\b(void|class|uint8|uint16|uint32|uint64|int8|int16|int32|int64|addr_t|float|double|bool|char|string|array|vector2d|vector3d|vector4d)\\b"
				}
			]
		},
		"StandardConstants": {
			"patterns": [
				{
					"name": "constant.language.gaml",
					"match": "\\b(true|false|None)\\b"
				}
			]
		},
		"BuildinOperators": {
			"patterns": [
				{
					"name": "keyword.other.gaml",
					"match": "\\b(sizeof|typeof|nameof|alignof|isfunction|isstruct|isenum|isinterface|isobject|iscomponent|issubclass|isinstance|isiterable|isabstract|in|is|as|addr|cast|unsafe_cast|using)\\b"
				}
			]
		},
		"Asserts": {
			"patterns": [
				{
					"name": "keyword.other.gaml",
					"match": "\\b(assert|static_assert|static_error|static_warning|static_message)\\b"
				}
			]
		},
		"Strings": {
			"patterns": [
				{
					"name":"string.quoted.single.gaml",
					"begin": "'",
					"end": "'"
				},
				{
					"name":"string.quoted.double.gaml",
					"begin": "\"",
					"end": "\""
				}
			]
		},
		"BlockComment": {
			"patterns": [
				{
					"name": "comment.block.gaml",
					"begin": "\\s*+(\\/\\*)",
					"end": "\\*\\/"
				}
			]
		},
		"LineComment": {
			"patterns": [
				{
					"name": "comment.line.double-slash.gaml",
					"begin": "\\s*+(\\/\\/)",
					"end": "(?<=\\n)(?<!\\\\\\n)",
					"patterns": [
						{
							"include": "#LineContinuationCharacter"
						}
					]
				}
			]
		},
		"LineContinuationCharacter": {
			"patterns": [
				{
					"match": "(\\\\)\\n"
				}
			]
		},
		"DescriptionComment": {
			"patterns": [
				{
					"name": "block.gaml",
					"begin": "\\*\\*\\*",
					"end": "\\*\\*\\*",
					"patterns": [
						{
							"include": "#BlockComment"
						},
						{
							"include": "#LineComment"
						},
						{
							"include": "#Strings"
						},
						{
							"include": "#DescriptionModifiers"
						},
						{
							"include": "#GlobalSpaceModifiers"
						},
						{
							"include": "#FunctionKeywords"
						},
						{
							"include": "#StandardTypes"
						},
						{
							"include": "#StandardConstants"
						},
						{
							"include": "#BuildinOperators"
						}
					]
				}
			]
		}
	}
}
